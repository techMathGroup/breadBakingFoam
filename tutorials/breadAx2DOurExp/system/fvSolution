FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(pG|T|omegaV|alphaS|alphaL|D)"
    {
        solver          PBiCGStab;
        preconditioner  DIC;
        tolerance       1e-10;
        relTol          0.001;
    }
 
    "(pG|T|omegaV|alphaS|alphaL|D)Final"
    {
        solver          PBiCGStab;
        preconditioner  DIC;
        tolerance       1e-12;
    }
}

interpolationSchemes
{
  D pointMVC;
  grad(D) pointMVC;
  T pointMVC;
}

PIMPLE
{
    nOuterCorrectors 250;
    debug 2;    // -- debug level
    residualControl
    {
        omegaV        
        {
            tolerance 1e-5;
            relTol 0;
        }
        T           
        {
            tolerance 1e-5;
            relTol 0;
        }
        pG         
        {
            tolerance 1e-5;
            relTol 0;
        }
    }
}

relaxationFactors
{
    fields
    {
        D 0.1;
        // DFinal 0.1;
        omegaV 0.1;
        // T 0.1;
        // pG 0.1;
    }
    equations
    {
        gammaSnGradCorr(pG)_0 0.5;
        gammaSnGradCorr(omegaV)_0 0.5;
        gammaSnGradCorr(T)_0 0.5;
        snGradCorr(D) 0.5;
        // omegaV 0.99;
        // D 0.99;
        // pG 0.99;
        // DFinal 0.95;
    }
}
