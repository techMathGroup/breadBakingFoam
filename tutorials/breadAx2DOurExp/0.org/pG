FoamFile
{
    version     1.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 1e5;
// internalField   uniform 64794;
// internalField   uniform 162668.280336008;

boundaryField
{
	"(wedgeZ0|wedgeZE)"
	{
		type wedge;
	}
    
    sides
    {
        type breadPGMixed;
        kM               6e-4; // -- heat transfer coefficient
        pGInf        1e5;    // -- oven temperature

        // -- mixed BC mandatory entires
        refValue        uniform 1e5;
        refGradient     uniform 0;
        valueFraction   uniform 0;
        value           uniform 1e5;
    }

    top
    {
        type fixedValue;
        value $internalField;
        // type breadPGMixed;
        // kM               0.01; // -- heat transfer coefficient
        // pGInf        1e5;    // -- oven temperature

        // // -- mixed BC mandatory entires
        // refValue        uniform 1e5;
        // refGradient     uniform 0;
        // valueFraction   uniform 0;
        // value           uniform 1e5;
    }

    bottom
    {
        type breadPGMixed;
        kM               3e-4; // -- heat transfer coefficient
        pGInf        1e5;    // -- oven temperature

        // -- mixed BC mandatory entires
        refValue        uniform 1e5;
        refGradient     uniform 0;
        valueFraction   uniform 0;
        value           uniform 1e5;
    }
}

