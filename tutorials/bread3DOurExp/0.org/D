FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      DD;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    // Zhang experiment
    "(sides)"
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    
    "(bottom)"
    {
        type            fixedDisplacementZeroShear;
        // type            fixedDisplacementShear;
        // fricCoeff   -2e4;
        // type            fixedValue;
        value           uniform (0 0 0);
        // type            breadDFloor;
        // floorPos        -2e-3;
        // refValue        uniform (0 0 0);
        // refGradient     uniform (0 0 0);
        // valueFraction   uniform 1;
        // value           uniform 0;
    }

    "symmetryPatch"
    {
        type  symmetry;
    }
    "(wedgeZ0|wedgeZE)"
	{
		type wedge;
	}

    sides
    {
        // type            solidTraction;
        // traction        uniform (0 0 0);
        // pressure        uniform 0;
        // value           uniform (0 0 0);
        type            breadDFloor;
        floorPos        5e-4;
        refValue        uniform (0 0 0);
        refGradient     uniform (0 0 0);
        valueFraction   uniform 1;
        value           uniform 0;
    }
}

