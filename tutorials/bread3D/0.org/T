FoamFile
{
    version     1.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    // Zhang experiment
    "(sides|bottom)"
	{
        type breadTMixed;
        refValue        uniform 300;
        refGradient     uniform 0;
        valueFraction   uniform 0;
        value           uniform 300;
        alpha           10;
        TInfTableDict   
        {
            file "$FOAM_CASE/constant/TInfTable";
        }
	}
    "symmetryPatch"
    {
    type  symmetry;
    }
	
	"(wedgeZ0|wedgeZE)"
	{
		type wedge;
	}

    // custom experiment
    "(sidesOur|topOur)"
	{
        type breadTMixed;
        refValue        uniform 300;
        refGradient     uniform 0;
        valueFraction   uniform 0;
        value           uniform 300;
        alpha           9;
        TInfTableDict   
        {
            file "$FOAM_CASE/constant/TInfTable";
        }
	}

    "(bottomOur)"
	{
        type breadTMixed;
        refValue        uniform 300;
        refGradient     uniform 0;
        valueFraction   uniform 0;
        value           uniform 300;
        alpha           11;
        TInfTableDict   
        {
            file "$FOAM_CASE/constant/TInfTable";
        }
	}
}
