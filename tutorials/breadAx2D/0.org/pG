        type fixedValue;
        value $internalField;
	}
    sidesOur
    {
        type breadPGMixed;
        kM               0.009; // -- heat transfer coefficient
        pGInf        1e5;    // -- oven temperature

        // -- mixed BC mandatory entires
        refValue        uniform 1e5;
        refGradient     uniform 0;
        valueFraction   uniform 0;
        value           uniform 1e5;
        // type fixedValue;
        // value $internalField;
        // type zeroGradient;
	}

    topOur
    {
        type fixedValue;
        value $internalField;
        // type breadPGMixed;
        // // kM               0.007; // -- heat transfer coefficient
        // kM               0.008; // -- heat transfer coefficient
        // pGInf        1e5;    // -- oven temperature

        // // -- mixed BC mandatory entires
